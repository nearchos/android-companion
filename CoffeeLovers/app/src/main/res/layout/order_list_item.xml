<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/order_list_item_status"
        android:focusable="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/order_list_item_name"
        android:text="@string/Name"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/order_list_item_status"
        android:layout_toStartOf="@id/order_list_item_status"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/order_list_item_summary"
        android:text="Summary"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/order_list_item_name"
        android:layout_toLeftOf="@id/order_list_item_status"
        android:layout_toStartOf="@id/order_list_item_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>