<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/topStartTextView"
        android:background="#000"
        android:textColor="#fff"
        android:text="@string/Living_Room"
        android:textSize="30sp"
        android:gravity="top|center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toStartOf="@id/topEndTextView"
        app:layout_constraintBottom_toTopOf="@id/bottomStartTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/topEndTextView"
        android:background="#fff"
        android:textColor="#000"
        android:text="@string/Kitchen"
        android:textSize="30sp"
        android:gravity="top|center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/topStartTextView"
        app:layout_constraintBottom_toTopOf="@id/bottomEndTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/bottomStartTextView"
        android:background="#fff"
        android:textColor="#000"
        android:text="@string/Bedroom"
        android:textSize="30sp"
        android:gravity="top|center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toStartOf="@id/bottomEndTextView"
        app:layout_constraintTop_toBottomOf="@id/topStartTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/bottomEndTextView"
        android:background="#000"
        android:textColor="#fff"
        android:text="@string/Garage"
        android:textSize="30sp"
        android:gravity="top|center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/bottomStartTextView"
        app:layout_constraintTop_toBottomOf="@id/topEndTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ToggleButton
        android:id="@+id/topStartToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/topStartTextView"
        app:layout_constraintEnd_toEndOf="@+id/topStartTextView"
        app:layout_constraintStart_toStartOf="@+id/topStartTextView" />

    <ToggleButton
        android:id="@+id/topEndToggleButton"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/topEndTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/topStartTextView" />

    <ToggleButton
        android:id="@+id/bottomStartToggleButton"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bottomStartTextView"
        app:layout_constraintStart_toStartOf="@+id/bottomStartTextView" />

    <ToggleButton
        android:id="@+id/bottomEndToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bottomStartTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>